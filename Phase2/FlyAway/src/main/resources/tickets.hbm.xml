<?xml version="1.0" encoding="UTF-8"?>


<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
    <hibernate-mapping package="com">
    	
    	<class name="Tickets" table="tickets">
    		<id name="OrderNumber" column="OrderNumber">
    			<generator class="increment"></generator>
    		</id>
    		<property name="From_place" type="string" />
    		<property name="To_place" type="string" />
    		<property name="Journey_Date" type="date" />
    		<property name="Quantity" type="string" />
    		<property name="Airline" type="string" />
    		<property name="Name" type="string" />
    		<property name="Address" type="string" />
    		<property name="Mobile" type="string" />
    		<property name="Age" type="string" />
    		<property name="Price" type="string" />
    		<property name="Time" type="string" />
    		<property name="Total_Price" type="string" />
    		
    	</class>
    </hibernate-mapping>